<% layout("/layouts/boilerplate") -%>
    <div class="row">
    <div class="col-8 offset-2">
        <br>
    <h2>Edit your list</h2>
    <br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" value="<%= listing.title %>" class="form-control">
        </div>
       <!--What is mb- margin-bottom-->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" class="form-control" ><%= listing.description %></textarea> 
        </div>
        
        <div  class="mb-3">
            <label for="image-url" class="form-label">Image Url</label>
            <input type="text" name="image" value="<%= listing.image %>" class="form-control">
        </div>

    <div class="row">
        <div  class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="price" value="<%= listing.price %>" class="form-control">
    </div>
        
        <div  class="mb-3 col-8">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" value="<%= listing.location %>" class="form-control">
        </div>
    </div>

        <div  class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" value="<%= listing.country %>" class="form-control">
        </div>
        <br>
        <br>
        <button class="btn btn-dark btn-add">Edit</button>
        <br>
        <br>
    </form>
    </div>
    </div>
</body>
</html>